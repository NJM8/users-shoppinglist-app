extends base

block content
  h2(class="col-3 offset-1") Hello #{admin.username}
  h2(class="col-4 offset-1") Here are all the users:

  ul(class="col-4 offset-1 list-group mt-4 mb-4")
    for user in allUsers
      li(class="list-group-item d-flex justify-content-between") 
        p Username: #{user.username} 
        form(action=`/users/admin/${admin.id}/deleteUser/${user.id}?_method=DELETE` method="POST")
          input(type="submit" value="Delete user" class="btn btn-sm btn-warning")

  div(class="col-3 offset-1")
    div(class="form-group")
      form(action=`/users/${admin.id}`)
        input(type="submit" value="Back to your page" class="btn btn-primary")